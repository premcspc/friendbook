<h1>Listing friends</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Ph</th>
    <th>E-mail</th>
    <th>Birthday</th>
    <th>Company</th>
    <th>Address</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @friends.each do |friend| %>
  <tr>
    <td><%= friend.name %></td>
    <td><%= friend.ph %></td>
    <td><%= friend.email %></td>
    <td><%= friend.birthday %></td>
    <td><%= friend.company %></td>
    <td><%= friend.address %></td>
    <td><%= friend.description %></td>
    <td><%= link_to 'Show', friend %></td>
    <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
    <td><%= link_to 'Destroy', friend, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

